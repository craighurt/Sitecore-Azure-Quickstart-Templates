{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "variables": {},
  "parameters": {
    "slotName": {
      "type": "string"
    },
    "cmMsdeployPackageurl": {
      "type": "securestring"
    },
    "cdMsdeployPackageurl": {
      "type": "securestring"
    },
    "sqlserverLogin": {
      "type": "string",
      "minLength": 1
    },
    "sqlserverPassword": {
      "type": "securestring",
      "minLength": 8
    },
    "licenseXml": {
      "type": "securestring"
    },
    "sitecoreAdminPassword": {
      "type": "securestring",
      "minLength": 8,
      "maxLength": 128
    }
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "azuredeploy-services",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/mathieu-benoit/Sitecore-Azure-Quickstart-Templates/master/Sitecore%208.2.1/my-xm-slot/azuredeploy-services.json"
        },
        "parameters": {
          "slotName": {
            "value": "[parameters('slotName')]"
          },
          "sqlserverLogin": {
            "value": "[parameters('sqlserverLogin')]"
          },
          "sqlserverPassword": {
            "value": "[parameters('sqlserverPassword')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "azuredeploy-msdeploy",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'azuredeploy-services')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/mathieu-benoit/Sitecore-Azure-Quickstart-Templates/master/Sitecore%208.2.1/my-xm-slot/azuredeploy-msdeploy.json"
        },
        "parameters": {
          "slotName": {
            "value": "[parameters('slotName')]"
          },
          "cmMsdeployPackageurl": {
            "value": "[parameters('cmMsdeployPackageurl')]"
          },
          "cdMsdeployPackageurl": {
            "value": "[parameters('cdMsdeployPackageurl')]"
          },
          "sqlserverLogin": {
            "value": "[parameters('sqlserverLogin')]"
          },
          "sqlserverPassword": {
            "value": "[parameters('sqlserverPassword')]"
          },
          "licenseXml": {
            "value": "[parameters('licenseXml')]"
          },
          "sitecoreAdminPassword": {
            "value": "[parameters('sitecoreAdminPassword')]"
          }
        }
      }
    }
  ]
}