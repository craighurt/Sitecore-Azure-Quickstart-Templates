{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "slotName": {
      "type": "string"
    },
    "keyVaultName": {
      "type": "string"
    },
    "keyVaultResourceGroupName": {
      "type": "string"
    },
    "licenseXml": {
      "type": "securestring"
    }
  },
  "variables": {
    "keyVaultId": "[resourceId(parameters('keyVaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('keyVaultName'))]",
    "cmMsdeployPackageurlSecretName": "SitecoreXmCmMsDeployPackageUrl",
    "cdMsdeployPackageurlSecretName": "SitecoreXmCdMsDeployPackageUrl",
    "sqlserverLoginSecretName": "SqlServerLogin",
    "sqlserverPasswordSecretName": "SqlServerPassword",
    "sitecoreAdminPasswordSecretName": "SitecoreAdminPassword"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "azuredeploy-services-slot",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/mathieu-benoit/Sitecore-Azure-Quickstart-Templates/master/Sitecore%208.2.1/my-xm-slot/azuredeploy-services.json"
        },
        "parameters": {
          "slotName": {
            "value": "[parameters('slotName')]"
          },
          "sqlserverLogin": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('sqlserverLoginSecretName')]"
            }
          },
          "sqlserverPassword": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('sqlserverPasswordSecretName')]"
            }
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "azuredeploy-msdeploy-slot",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'azuredeploy-services')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/mathieu-benoit/Sitecore-Azure-Quickstart-Templates/master/Sitecore%208.2.1/my-xm-slot/azuredeploy-msdeploy.json"
        },
        "parameters": {
          "slotName": {
            "value": "[parameters('slotName')]"
          },
          "cmMsdeployPackageurl": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('cmMsdeployPackageurlSecretName')]"
            }
          },
          "cdMsdeployPackageurl": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('cdMsdeployPackageurlSecretName')]"
            }
          },
          "sqlserverLogin": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('sqlserverLoginSecretName')]"
            }
          },
          "sqlserverPassword": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('sqlserverPasswordSecretName')]"
            }
          },
          "licenseXml": {
            "value": "[parameters('licenseXml')]"
          },
          "sitecoreAdminPassword": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('sitecoreAdminPasswordSecretName')]"
            }
          }
        }
      }
    }
  ]
}