{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "keyVaultName": {
      "type": "string"
    },
    "keyVaultResourceGroupName": {
      "type": "string"
    }
  },
  "variables": {
    "keyVaultId": "[resourceId(parameters('keyVaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('keyVaultName'))]",
    "sqlserverLoginSecretName": "SqlServerLogin",
    "sqlserverPasswordSecretName": "SqlServerPassword"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "azuredeploy-services",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/mathieu-benoit/Sitecore-Azure-Quickstart-Templates/master/Sitecore%208.2.1/my-xm/azuredeploy-nested-services.json"
        },
        "parameters": {
          "sqlserverLogin": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('sqlserverLoginSecretName')]"
            }
          },
          "sqlserverPassword": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('sqlserverPasswordSecretName')]"
            }
          }
        }
      }
    }
  ]
}