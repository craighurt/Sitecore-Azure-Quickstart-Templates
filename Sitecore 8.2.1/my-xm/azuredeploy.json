{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "keyVaultName": {
      "type": "string"
    },
    "keyVaultResourceGroupName": {
      "type": "string"
    },
    "sitecoreSku": {
      "type": "string",
      "defaultValue": "xM1",
      "allowedValues": [
        "custom",
        "xM1",
        "xM2",
        "xM3",
        "xM4",
        "xM5"
      ],
      "metadata": {
        "description": "Sitecore SKU controls the sizes and service levels of the provisioned resources"
      }
    },
    "licenseXml": {
      "type": "securestring"
    }
  },
  "variables": {
    "keyVaultId": "[resourceId(parameters('keyVaultResourceGroupName'), 'Microsoft.KeyVault/vaults', parameters('keyVaultName'))]",
    "cmMsdeployPackageurlSecretName": "SitecoreXmCmMsDeployPackageUrl",
    "cdMsdeployPackageurlSecretName": "SitecoreXmCdMsDeployPackageUrl",
    "sqlserverLoginSecretName": "SqlServerLogin",
    "sqlserverPasswordSecretName": "SqlServerPassword",
    "sitecoreAdminPasswordSecretName": "SitecoreAdminPassword",
    "servicesDeploymentName": "azuredeploy-services",
    "msDeployDeploymentName": "azuredeploy-msdeploy"
  },
  "resources": [
    {
      "apiVersion": "2015-01-01",
      "name": "[variables('servicesDeploymentName')]",
      "type": "Microsoft.Resources/deployments",
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/mathieu-benoit/Sitecore-Azure-Quickstart-Templates/master/Sitecore%208.2.1/my-xm/azuredeploy-services.json"
        },
        "parameters": {
          "keyVaultName": {
            "value": "[parameters('keyVaultName')]"
          },
          "keyVaultResourceGroupName": {
            "value": "[parameters('keyVaultResourceGroupName')]"
          },
          "sitecoreSku": {
            "value": "[parameters('sitecoreSku')]"
          }
        }
      }
    },
    {
      "apiVersion": "2015-01-01",
      "name": "[variables('msDeployDeploymentName')]",
      "type": "Microsoft.Resources/deployments",
      "dependsOn": [
        "[concat('Microsoft.Resources/deployments/', 'azuredeploy-services')]"
      ],
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "https://raw.githubusercontent.com/mathieu-benoit/Sitecore-Azure-Quickstart-Templates/master/Sitecore%208.2.1/my-xm/azuredeploy-msdeploy.json"
        },
        "parameters": {
          "cmMsdeployPackageurl": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('cmMsdeployPackageurlSecretName')]"
            }
          },
          "cdMsdeployPackageurl": {
            "reference": {
              "keyVault": {
                "id": "[variables('keyVaultId')]"
              },
              "secretName": "[variables('cdMsdeployPackageurlSecretName')]"
            }
          },
          "licenseXml": {
            "value": "[parameters('licenseXml')]"
          }
        }
      }
    }
  ]
}